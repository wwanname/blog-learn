---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
    border?: boolean
}

const { border } = Astro.props;
---


<div class={`icon`}>
    <a title="Go home" href="/creative-developer" class:list={['link', border && 'border']} />
</div>

<style>
    .icon {
        border-radius: 9999px;
        aspect-ratio: 1;
        overflow: clip;
        height: 100%;
    }

    .link {
        width: 100%;
        height: 100%;
        cursor: pointer;
        display: block;
        background-color: var(--backdrop);
        transition: color 150ms cubic-bezier(0.4, 0, 0.2, 1);
    }

    .border {
        border: 1px;
        border-color: var(--noticeoklchrelativelight);
    }
</style>